<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="@android:color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rescue Dose"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/rescueDoseAmount"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Dose Amount"
            android:inputType="number"
            android:padding="8dp" />

        <EditText
            android:id="@+id/breathingBefore"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Breathing Before (1-5)"
            android:inputType="number"
            android:padding="8dp"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/breathingAfter"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Breathing After (1-5)"
            android:inputType="number"
            android:padding="8dp"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/shortnessOfBreath"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Shortness of Breath (1-5)"
            android:inputType="number"
            android:padding="8dp"
            android:layout_marginTop="12dp" />

        <Button
            android:id="@+id/submitRescueDose"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="SUBMIT"
            android:backgroundTint="#5C8AF2"
            android:layout_marginTop="20dp" />
    </LinearLayout>
</ScrollView>
