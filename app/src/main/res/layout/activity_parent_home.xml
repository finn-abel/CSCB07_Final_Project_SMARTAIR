<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/topBar"
        layout="@layout/view_top_bar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/main_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <Button
                android:id="@+id/checkin"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:layout_marginTop="16dp"
                android:backgroundTint="#5C8AF2"
                android:text="DAILY CHECK IN" />

            <Button
                android:id="@+id/btnPEF"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:layout_marginTop="12dp"
                android:backgroundTint="#5C8AF2"
                android:text="PEF ENTRY" />

            <Button
                android:id="@+id/btnMedicineLogs"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:layout_marginTop="12dp"
                android:backgroundTint="#5C8AF2"
                android:text="LOG MEDICINE" />

            <Button
                android:id="@+id/btnCheckInHistory"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:layout_marginTop="12dp"
                android:backgroundTint="#5C8AF2"
                android:text="CHECK IN HISTORY" />

            <Button
                android:id="@+id/btnSchedule"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:text="CHILD SCHEDULE"
                android:backgroundTint="#5C8AF2"
                android:layout_marginTop="12dp" />

            <Button
                android:id="@+id/btnInventory"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:text="INVENTORY"
                android:backgroundTint="#5C8AF2"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="22dp"/>

            <TextView
                android:id="@+id/tv_dashboard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dashboard"
                android:layout_marginBottom="12dp"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"/> <!-- CENTER TEXT -->

            <Spinner
                android:id="@+id/SDspinnerChild"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="12dp"/>

            <LinearLayout
                android:id="@+id/childBadgeSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="#EEF3FF">

                <androidx.cardview.widget.CardView
                    android:id="@+id/tile_today_zone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/tv_tile_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Today's Zone"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_today_zone_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/tile_last_rescue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/tv_tile_rescue_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Last Rescue Time"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_tile_rescue_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/tile_weekly_rescue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/tv_tile_weekly_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Weekly Rescue Count"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_tile_weekly_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/tile_chart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/tv_tile_chart_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rescue Trend"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_toggle_range"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Show 30 days"
                            android:layout_marginTop="8dp"
                            android:textStyle="italic" />

                        <com.github.mikephil.charting.charts.LineChart
                            android:id="@+id/chart_trend"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:layout_marginTop="12dp" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
            <Button
                android:id="@+id/btnProviderReport"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:text="PROVIDER REPORT"
                android:backgroundTint="#5C8AF2"
                android:layout_marginTop="12dp" />
            <Button
                android:id="@+id/btnBadgeSettings"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:text="BADGE SETTINGS"
                android:backgroundTint="#5C8AF2"
                android:layout_marginTop="12dp" />
            <Button
                android:id="@+id/logout"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:text="SIGN OUT"
                android:backgroundTint="#5C8AF2"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="24dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
