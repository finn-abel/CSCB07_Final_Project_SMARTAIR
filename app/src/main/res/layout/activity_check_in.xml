<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/topBar"
        layout="@layout/view_top_bar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/container"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp"
            android:gravity="center_horizontal">   <!-- ADDED -->

            <TextView
                android:id="@+id/triage_intro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Daily Check In"
                android:textSize="28sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Please describe any symptoms you have experienced today and check off all associated triggers."
                android:textSize="16sp"
                android:layout_marginBottom="16dp"/>

            <EditText
                android:id="@+id/symptoms"
                android:layout_width="match_parent"
                android:layout_height="123dp"
                android:layout_marginBottom="20dp"
                android:background="@android:drawable/edit_text"
                android:gravity="top|start"
                android:hint="Please separate each symptom with a comma."
                android:inputType="textMultiLine"
                android:padding="12dp" />

            <GridLayout
                android:id="@+id/checkboxGrid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="3"
                android:layout_marginBottom="20dp"
                android:alignmentMode="alignBounds">

                <CheckBox
                    android:id="@+id/smoke"
                    android:text="Smoke"
                    android:buttonTint="#5C8AF2"
                    android:layout_margin="8dp"/>

                <CheckBox
                    android:id="@+id/dust"
                    android:text="Dust"
                    android:buttonTint="#5C8AF2"
                    android:layout_margin="8dp"/>

                <CheckBox
                    android:id="@+id/pets"
                    android:text="Pets"
                    android:buttonTint="#5C8AF2"
                    android:layout_margin="8dp"/>

                <CheckBox
                    android:id="@+id/cold_air"
                    android:text="Cold Air"
                    android:buttonTint="#5C8AF2"
                    android:layout_margin="8dp"/>

                <CheckBox
                    android:id="@+id/odour"
                    android:text="Strong Odours"
                    android:buttonTint="#5C8AF2"
                    android:layout_margin="8dp"/>

                <CheckBox
                    android:id="@+id/other"
                    android:text="Other"
                    android:buttonTint="#5C8AF2"
                    android:layout_margin="8dp"/>
            </GridLayout>

            <EditText
                android:id="@+id/other_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="If other, please specify"
                android:padding="12dp"
                android:background="@android:drawable/edit_text"
                android:layout_marginBottom="20dp"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <EditText
                    android:id="@+id/date"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="55dp"
                    android:hint="Date (dd/mm/yyyy)"
                    android:padding="12dp"
                    android:background="@android:drawable/edit_text"
                    android:layout_marginEnd="16dp"/>

                <Button
                    android:id="@+id/submit_triage"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:backgroundTint="#5C8AF2"
                    android:text="SUBMIT"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>