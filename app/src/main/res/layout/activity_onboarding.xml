<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/onboarding_scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fillViewport="true"
    tools:context=".Views.OnboardingActivity">

    <LinearLayout
        android:orientation="vertical"
        android:padding="@dimen/space_large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/onboarding_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceHeadline5"
            android:textColor="@android:color/black"
            android:text="@string/onboarding_title"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="@dimen/space_medium" />

        <TextView
            android:id="@+id/onboarding_intro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/onboarding_intro"
            android:textAppearance="?attr/textAppearanceBody1"
            android:gravity="center"
            android:layout_marginBottom="@dimen/space_large" />

        <TextView
            android:id="@+id/medicine_title"
            android:text="@string/medicine_title"
            android:textStyle="bold"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" />
        <TextView
            android:id="@+id/medicine_text"
            android:text="@string/medicine_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_large" />

        <TextView
            android:id="@+id/privacy_roles_title"
            android:text="@string/privacy_roles_title"
            android:textStyle="bold"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"/>
        <TextView
            android:id="@+id/privacy_roles_text"
            android:text="@string/privacy_roles_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_large" />

        <TextView
            android:id="@+id/parent_title"
            android:text="@string/parent_title"
            android:textStyle="bold"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"/>
        <TextView
            android:id="@+id/parent_text"
            android:text="@string/parent_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_large" />

        <TextView
            android:id="@+id/parent_invite_title"
            android:text="@string/parent_invite_title"
            android:textStyle="bold"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"/>
        <TextView
            android:id="@+id/parent_invite_text"
            android:text="@string/parent_invite_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_large" />

        <TextView
            android:id="@+id/child_title"
            android:text="@string/child_title"
            android:textStyle="bold"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"/>
        <TextView
            android:id="@+id/child_text"
            android:text="@string/child_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_large" />

        <TextView
            android:id="@+id/provider_title"
            android:text="@string/provider_title"
            android:textStyle="bold"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"/>
        <TextView
            android:id="@+id/provider_text"
            android:text="@string/provider_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_large" />

        <TextView
            android:id="@+id/onboarding_finish_title"
            android:text="@string/onboarding_finish_title"
            android:textStyle="bold"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"/>
        <TextView
            android:id="@+id/onboarding_finish_text"
            android:text="@string/onboarding_finish_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_large" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/onboarding_cta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cta_text"
            android:layout_marginTop="@dimen/space_medium" />

    </LinearLayout>
</ScrollView>