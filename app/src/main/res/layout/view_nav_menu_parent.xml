<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="#F0F0F0">

    <LinearLayout
        android:id="@+id/navMenuContainer"
        android:orientation="vertical"
        android:background="@drawable/popup_background"
        android:padding="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/nav_checkin_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DAILY CHECK IN"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/secondary"
            android:textColor="@android:color/white"/>

        <Button
            android:id="@+id/nav_pef_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PEF ENTRY"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/secondary"
            android:textColor="@android:color/white"/>

        <Button
            android:id="@+id/nav_meds_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LOG MEDICINE"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/secondary"
            android:textColor="@android:color/white"/>

        <Button
            android:id="@+id/nav_history_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CHECK IN HISTORY"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/secondary"
            android:textColor="@android:color/white"/>

        <Button
            android:id="@+id/nav_badge_settings_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BADGE SETTINGS"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/secondary"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/nav_child_schedule_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CHILD SCHEDULE"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/secondary"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/nav_inventory_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="INVENTORY"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/secondary"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/nav_manage_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MANAGE CHILDREN"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/secondary"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/nav_invites"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PROVIDER INVITES"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/secondary"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/nav_provider_report_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PROVIDER REPORT"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/secondary"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/nav_home_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="HOME"
            android:layout_marginTop="0dp"
            android:backgroundTint="@color/secondary"
            android:textColor="@android:color/white" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
