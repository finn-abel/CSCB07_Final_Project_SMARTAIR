<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Presenters.MainPresenter">
    <LinearLayout
        android:id="@+id/childBadgeSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:padding="16dp"
        android:background="#EEF3FF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/tile_today_zone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tv_tile_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Today's Zone"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_today_zone_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/tile_last_rescue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tv_tile_rescue_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last Rescue Time"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_tile_rescue_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/tile_weekly_rescue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tv_tile_weekly_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Weekly Rescue Count"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_tile_weekly_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textSize="18sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView

            android:id="@+id/tile_chart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tv_tile_chart_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rescue Trend"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_toggle_range"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Show 30 days"
                    android:layout_marginTop="8dp"
                    android:textStyle="italic"/>

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/chart_trend"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="12dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btnPEF"
            android:layout_width="254dp"
            android:layout_height="62dp"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#5C8AF2"
            android:text="PEF ENTRY"/>

        <Button
            android:id="@+id/btnInventory"
            android:layout_width="254dp"
            android:layout_height="62dp"
            android:backgroundTint="#5C8AF2"
            android:text="INVENTORY"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/btnMedicineLogs"
            android:layout_width="254dp"
            android:layout_height="62dp"
            android:backgroundTint="#5C8AF2"
            android:text="MEDICINE LOGS"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/checkin"
            android:layout_width="254dp"
            android:layout_height="62dp"
            android:backgroundTint="#5C8AF2"
            android:text="DAILY CHECK IN"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/btnProviderReport"
            android:layout_width="254dp"
            android:layout_height="62dp"
            android:backgroundTint="#5C8AF2"
            android:text="PROVIDER REPORT"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/logout"
            android:layout_width="254dp"
            android:layout_height="63dp"
            android:backgroundTint="#5C8AF2"
            android:text="SIGN OUT"/>

    </LinearLayout>

</ScrollView>
        <!-- STREAKS -->
        <TextView
            android:id="@+id/tvControllerStreak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Controller Streak: 0 days"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTechniqueStreak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Technique Streak: 0 days"
            android:textSize="18sp"
            android:layout_marginTop="8dp"
            android:textStyle="bold" />

        <!-- BADGES TITLE -->
        <TextView
            android:id="@+id/tvBadgesTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Badges"
            android:textSize="20sp"
            android:layout_marginTop="16dp"
            android:textStyle="bold" />

        <!-- BADGES -->
        <LinearLayout
            android:id="@+id/badgeContainer"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp" />

    </LinearLayout>

    <Button
        android:id="@+id/btnBadgeSettings"
        android:layout_width="254dp"
        android:layout_height="62dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#5C8AF2"
        android:text="BADGE SETTINGS"
        app:layout_constraintBottom_toTopOf="@+id/btnSchedule"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent" />
    <Button
        android:id="@+id/btnSchedule"
        android:layout_width="254dp"
        android:layout_height="62dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#5C8AF2"
        android:text="CHILD SCHEDULE"
        app:layout_constraintBottom_toTopOf="@+id/btnPEF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent" />
    <Button
        android:id="@+id/btnPEF"
        android:layout_width="254dp"
        android:layout_height="62dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#5C8AF2"
        android:text="PEF ENTRY"
        app:layout_constraintBottom_toTopOf="@+id/btnInventory"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/triage_button"
        android:layout_width="254dp"
        android:layout_height="62dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#5C8AF2"
        android:text="TRIAGE"
        app:layout_constraintBottom_toTopOf="@+id/btnPEF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/logout"
        android:layout_width="244dp"
        android:layout_height="63dp"
        android:backgroundTint="#5C8AF2"
        android:layout_marginBottom="24dp"
        android:text="SIGN OUT"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/checkin"
        android:layout_width="254dp"
        android:layout_height="62dp"
        android:backgroundTint="#5C8AF2"
        android:text="DAILY CHECK IN"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/logout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnMedicineLogs"
        android:layout_width="254dp"
        android:layout_height="62dp"
        android:backgroundTint="#5C8AF2"
        android:text="LOG MEDICINE"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/checkin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnInventory"
        android:layout_width="254dp"
        android:layout_height="62dp"
        android:backgroundTint="#5C8AF2"
        android:text="INVENTORY"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/btnMedicineLogs"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnCheckInHistory"
        android:layout_width="250dp"
        android:layout_height="68dp"
        android:layout_marginBottom="10dp"
        android:text="DAILY CHECK IN HISTORY"
        android:backgroundTint="#5C8AF2"
        app:layout_constraintBottom_toTopOf="@+id/btnPEF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
