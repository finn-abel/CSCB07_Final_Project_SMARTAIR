<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/topBar"
        layout="@layout/view_top_bar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/contentContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="24dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Spinner
            android:id="@+id/BSspinnerChild"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/BStvThresholdTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set Badge Thresholds"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/labelPerfectWeek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Perfect Controller Week Goal"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/BSperfectWeekThreshold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="Enter number of days"
            android:layout_marginTop="6dp" />


        <TextView
            android:id="@+id/labelTechniqueGoal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Technique Sessions Goal"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/BStechniqueThreshold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="Enter number of sessions"
            android:layout_marginTop="6dp" />

        <TextView
            android:id="@+id/labelLowRescue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Max Rescue Days (per 30 days)"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/BSlowRescueThreshold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="Enter max rescue days"
            android:layout_marginTop="6dp" />


        <Button
            android:id="@+id/BSbtnSave"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="SAVE SETTINGS"
            android:backgroundTint="#5C8AF2"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/BStvChildBadges"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Child's Earned Badges"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="24dp" />

        <ScrollView
            android:id="@+id/BSscrollBadges"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="12dp">

            <LinearLayout
                android:id="@+id/BSbadgeListContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>
        </ScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
