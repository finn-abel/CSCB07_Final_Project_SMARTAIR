<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <Spinner
        android:id="@+id/BSspinnerChild"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/BStvThresholdTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Badge Thresholds"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/BSspinnerChild"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/BSperfectWeekThreshold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Perfect Controller Week Goal"
        android:inputType="number"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/BStvThresholdTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/BStechniqueThreshold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Technique Sessions Goal"
        android:inputType="number"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/BSperfectWeekThreshold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/BSlowRescueThreshold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Max Rescue Days (per 30 days)"
        android:inputType="number"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/BStechniqueThreshold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/BSbtnSave"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:text="SAVE SETTINGS"
        android:backgroundTint="#5C8AF2"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/BSlowRescueThreshold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/BStvChildBadges"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Child's Earned Badges"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/BSbtnSave"
        app:layout_constraintStart_toStartOf="parent" />

    <ScrollView
        android:id="@+id/BSscrollBadges"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/BStvChildBadges"
        app:layout_constraintBottom_toTopOf="@id/BSbtnBackToHome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/BSbadgeListContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>
    </ScrollView>

    <Button
        android:id="@+id/BSbtnBackToHome"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:text="BACK TO HOME"
        android:backgroundTint="#5C8AF2"
        android:layout_marginTop="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
