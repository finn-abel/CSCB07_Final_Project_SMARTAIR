<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/BCimgBadgeIcon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_badge_technique"
        android:layout_marginEnd="16dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/BCbadgeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Technique Master"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/BCbadgeDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Completed 10 high-quality technique sessions."
            android:textSize="14sp"/>
    </LinearLayout>
</LinearLayout>
