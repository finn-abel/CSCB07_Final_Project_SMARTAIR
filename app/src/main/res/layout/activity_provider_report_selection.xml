<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".Views.ProviderReportSelectionActivity">
    
<TextView
    android:id="@+id/selectionTitle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="DOWNLOAD REPORT FOR:"
    android:textSize="18sp"
    android:textStyle="bold"
    android:textColor="#5C8AF2"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="60dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/childPicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/selectionTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"

        android:gravity="center_vertical">

        <TextView
            android:id="@+id/childTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Child:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#5C8AF2" />

        <Spinner
            android:id="@+id/SDspinnerChild"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="12dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/providerPicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/childPicker"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"

        android:gravity="center_vertical">

        <TextView
            android:id="@+id/providerTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Provider:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#5C8AF2" />

        <Spinner
            android:id="@+id/SDspinnerProvider"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="12dp"/>
    </LinearLayout>

    <Button
    android:id="@+id/btn3Months"
    android:layout_width="254dp"
    android:layout_height="62dp"
    android:layout_marginTop="20dp"
    android:backgroundTint="#5C8AF2"
    android:text="3 MONTHS"
    app:layout_constraintTop_toBottomOf="@+id/providerPicker"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.503"
    app:layout_constraintStart_toStartOf="parent" />

<Button
    android:id="@+id/btn6Months"
    android:layout_width="254dp"
    android:layout_height="62dp"
    android:layout_marginTop="10dp"
    android:backgroundTint="#5C8AF2"
    android:text="6 MONTHS"
    app:layout_constraintTop_toBottomOf="@+id/btn3Months"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.503"
    app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>