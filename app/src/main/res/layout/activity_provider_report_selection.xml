<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".Views.ProviderReportSelectionActivity">

    <TextView
        android:id="@+id/textView33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="293dp"
        android:text="Select Filters"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.153"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/providerPicker" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/permissionLayout"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView33">

        <CheckBox
            android:id="@+id/symptomsCheck_filter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Symptoms"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/adherence_filter" />

        <CheckBox
            android:id="@+id/triggersCheck_filter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Triggers"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/symptomsCheck_filter" />

        <CheckBox
            android:id="@+id/pef_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Peak Expiry Flow (PEF)"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/triggersCheck_filter" />

        <CheckBox
            android:id="@+id/rescueLogs_filter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Rescue logs"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <CheckBox
            android:id="@+id/triage_filter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Triage incidents"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pef_filter" />

        <CheckBox
            android:id="@+id/summary_filter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Summary charts"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/triage_filter" />

        <CheckBox
            android:id="@+id/adherence_filter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Controller adherence summary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rescueLogs_filter" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <include
        android:id="@+id/topBar"
        layout="@layout/view_top_bar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
<TextView
    android:id="@+id/selectionTitle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="DOWNLOAD REPORT FOR:"
    android:textSize="18sp"
    android:textStyle="bold"
    android:textColor="#5C8AF2"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="100dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/childPicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/selectionTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"

        android:gravity="center_vertical">

        <TextView
            android:id="@+id/childTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Child:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#5C8AF2" />

        <Spinner
            android:id="@+id/SDspinnerChild"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="12dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/providerPicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/childPicker"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"

        android:gravity="center_vertical">

        <TextView
            android:id="@+id/providerTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Provider:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#5C8AF2" />

        <Spinner
            android:id="@+id/SDspinnerProvider"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="12dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn3Months"
        android:layout_width="254dp"
        android:layout_height="62dp"
        android:layout_marginTop="440dp"
        android:backgroundTint="#5C8AF2"
        android:text="3 MONTHS"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/providerPicker" />

    <Button
        android:id="@+id/btn6Months"
        android:layout_width="254dp"
        android:layout_height="62dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#5C8AF2"
        android:text="6 MONTHS"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn3Months" />

</androidx.constraintlayout.widget.ConstraintLayout>

